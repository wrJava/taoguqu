/* pages/zhuanjialiebiao/zhuanjialiebiao.wxss */

.shaixuanpaixu {
  height: 80rpx;
  width: 100%;
  display: flex;
  overflow: hidden;
  border-top: 2rpx solid #dcddde;
  border-bottom: 2rpx solid #dcddde;
}

.shaixuanBox, .paixuBox {
  flex: 1;
  display: flex;
  justify-content: center;
}

.sheixuan, .paixu {
  display: block;
  line-height: 80rpx;
}

.xuanxiang {
  font-size: 26rpx;
  color: #666;
}

.sanjiao {
  width: 18rpx;
  height: 18rpx;
  margin-left: 6rpx;
  margin-top: 30rpx;
}

.zhuanjiaList {
  padding: 24rpx 40rpx;
  border-bottom: 4rpx solid #f4f4f4;
  display: flex;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.right {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}

.top, .down {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.down{
  position: absolute;
  bottom: 0;
}
.name {
  font-size: 32rpx;
  color: #1a1a1a;
}

.jiandingshu {
  font-size: 26rpx;
  color: #939496;
}

.biaoqianList {
  font-size: 20rpx;
  color: #7a593d;
  padding: 5rpx 14rpx;
  border: 2rpx solid #7a593d;
  border-radius: 10rpx;
  margin-left: 16rpx;
  height: 40rpx;
}

.biaoqianList:nth-child(1) {
  margin-left: 0;
}

.jiage {
  color: #d14531;
  font-size: 24rpx;
  line-height: 53rpx;
  flex: 1;
  text-align: right;
}

.jiage>view {
  font-size: 40rpx;
  line-height: 46rpx;
  display: inline-block;
}

