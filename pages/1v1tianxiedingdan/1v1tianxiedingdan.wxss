}

.selectTheCoupon_youkeyong {
  width: 172rpx;
  color: #7a593d;
  text-align: center;
  font-size: 24rpx;
  background: #ffc83f;
  border-radius: 10rpx;
}

.selectTheCoupon_wukeyong {
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
}

.anonymous {
  width: 726rpx;
  margin-left: 24rpx;
  display: flex;
  padding: 32rpx 24rpx 32rpx 0;
  justify-content: space-between;
}

.anonymousLeft {
  font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
}

.anonymousRight {
  width: 80rpx;
  height: 50rpx;
}

.wx-switch-input {
  width: 80rpx !important;
  height: 50rpx !important;
}

.wx-switch-input::before {
  width: 80rpx !important;
  height: 50rpx !important;
  box-shadow: inset 0 0 1px 0;  
}

.wx-switch-input::after {
  width: 47rpx !important;
  height: 47rpx !important;
}

.tijiao {
  width: 100%;
  display: block;
  background: #ffc83f;
  font-size: 30rpx;
